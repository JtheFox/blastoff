<div class="columns is-centered">
    <div class="column is-5-tablet is-4-desktop is-3-widescreen">
        <form id="login-form" action="" class="box">
            <div class="field">
                <label for="" class="label">Username</label>
                <div class="control has-icons-left">
                    <input id="login-username" type="text" placeholder="e.g. bobsmith123" class="input" required>
                    <span class="icon is-small is-left">
                        <i class="fa fa-user"></i>
                    </span>
                </div>
                <p id="usernameError" class="loginError">&nbsp;</p>
            </div>
            <div class="field">
                <label for="" class="label">Password</label>
                <div class="control has-icons-left">
                    <input id="login-password" type="password" placeholder="*******" class="input" required>
                    <span class="icon is-small is-left">
                        <i class="fa fa-lock"></i>
                    </span>
                </div>
                <p id="passwordError" class="loginError">&nbsp;</p>
            </div>
            <div class="field loginBtn">
                <button type="submit" class="button is-success">Login</button>
            </div>
            <div class="otherActionMessage">
                <p>Don't have an account? <a href="/signup">Sign Up</a></p>
            </div>
        </form>
    </div>
</div>
<script src="./js/login.js"></script>