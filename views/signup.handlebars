<form id ="signup-form" action="" class="box">
    <div class="field">
        <label for="" class="label">Username</label>
        <div class="control has-icons-left">
            <input id="signup-username" type="text" placeholder="e.g. bobsmith123" class="input" required>
            <span class="icon is-small is-left">
                <i class="fa fa-user"></i>
            </span>
        </div>
        <p id="usernameError" class="loginError">&nbsp;</p>
    </div>
    <div class="field">
        <label for="" class="label">Password</label>
        <div class="control has-icons-left">
            <input id="singup-password" type="password" placeholder="*******" class="input" required>
            <span class="icon is-small is-left">
                <i class="fa fa-lock"></i>
            </span>
        </div>
        <p id="passwordError" class="loginError">&nbsp;</p>
    </div>
    <div class="field loginBtn">
        <button class="button is-success">Sign Up</button>
    </div>
    <div class="otherActionMessage">
        <p>Already have an account? <a href="/login">Sign In</a></p>
    </div>
</form>
<script src="./js/signup.js"></script>